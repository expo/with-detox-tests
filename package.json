{
  "name": "detox-testing",
  "version": "0.0.0",
  "description": "Hello Expo!",
  "author": null,
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "engines": {
    "node": ">=8",
    "yarn": ">=1.9.4"
  },
  "scripts": {
    "start": "expo-cli start",
    "e2e": "detox test --configuration ios.sim",
    "e2e-verbose": "detox test --loglevel trace --debug-synchronization --configuration ios.sim"
  },
  "dependencies": {
    "expo": "^29.0.0",
    "react": "16.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-29.0.0.tar.gz"
  },
  "devDependencies": {
    "detox": "^9.0.4",
    "detox-expo-helpers": "^0.2.0",
    "jest-expo": "^29.0.0"
    
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim": {
        "binaryPath": "bin/Exponent-2.8.2.app",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  },
  "jest": {
    "preset": "jest-expo"
  }
}
